#!/usr/bin/env python

import sys

WORD_SIZE = 32

def get_bit_list(mask):
    bits = []
    for bit in range(0, WORD_SIZE):
        bits.append((1 << int(bit)) & int(mask))

    return bits

def print_bit_list(bit_list):
    setbits = []
    pos = 0
    for item in bit_list:
        if item:
            setbits.append(str(pos))
        pos += 1
            
    print "Bits set: " + ', '.join(setbits)
    
    rev = list(bit_list)
    rev.reverse()
    pos = 1
    for item in rev:
        byte = 1 if item else 0
        print byte,
        if pos % 8 == 0:
            print ' ',
        pos += 1
    print

if __name__ == '__main__':
    for arg in sys.argv[1:]:
        mask = eval(arg)
        print_bit_list(get_bit_list(mask))

