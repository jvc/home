# autoload -Uz vcs_info

# See the documentation for the format string definition
# This generates a fancy coloured string with $vcs:($branch)
# zstyle ':vcs_info:*' formats '%b'
# zstyle ':vcs_info:*' enable git
#zstyle ':vcs_info:*' enable svn

use_powerline=false
powerline_root=~/.local/lib/python3.5/site-packages/powerline
if $use_powerline && [[ -d $powerline_root ]]; then
    . $powerline_root/bindings/zsh/powerline.zsh
else
    autoload -Uz promptinit
    promptinit
    prompt jvc
fi
