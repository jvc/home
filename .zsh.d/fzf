[[ -d $HOME/src/fzf ]] || return 0

export FZF_DEFAULT_COMMAND='(git ls-tree -r --name-only HEAD ||
    find . -path "*/\.*" -prune -o -type f -print -o -type l -print |
    sed s/^..//) 2> /dev/null'

# Setup fzf
# ---------
if [[ ! "$PATH" == *$HOME/src/fzf/bin* ]]; then
  path+="$HOME/src/fzf/bin"
fi

# Auto-completion
# ---------------
[[ $- == *i* ]] && source "$HOME/src/fzf/shell/completion.zsh" 2> /dev/null

# Key bindings
# ------------
source "$HOME/src/fzf/shell/key-bindings.zsh"
