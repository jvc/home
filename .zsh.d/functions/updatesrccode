updatesrccode()
{
   for dir in *(/)
   do
      if [[ -d "$dir/.svn" ]]
      then
         ( cd $dir && svn update )
      elif [[ -d "$dir/.git" ]]
      then
         ( cd $dir && git pull )
      elif [[ -d "$dir/.hg" ]]
      then
         ( cd $dir && hg update )
      else
         print "$Not a recognized workspace: \"$dir\""
      fi
   done
}
