# Key bindings
#
#	maps:
#		alias		alias menu
#		attach		attachment menu
#		browser		directory browser
#		compose		compose menu
#		index		message index
#		pgp		pgp menu
#		postpone	postponed message recall menu
#		generic		generic keymap for all of the above
#		editor		line editor
#		pager		text viewer
#

bind generic { top-page
bind generic } bottom-page
bind index . next-unread
bind index , previous-unread
bind index R read-thread

#bind editor <TAB> complete-query
#bind editor \ci complete-query
bind editor \cn history-down
bind editor \cp history-up
bind index \cn next-entry
bind index \cp previous-entry
bind index \en next-page
bind index \ep previous-page
bind generic \ep last-entry
bind generic \cn next-entry
bind generic \cp previous-entry
bind pager \cn next-entry
bind pager \cp previous-entry
bind pager \en next-page
bind pager \ep previous-page


macro index,pager  c "<change-folder>?<toggle-mailboxes>" "open a different folder"
macro index \Cr \
  "<tag-pattern>~N\n<tag-prefix><clear-flag>N<tag-pattern>~O\n<tag-prefix><clear-flag>O" \
  "Mark all new messages as read"

# "Delete" to Trash
macro index D ":set confirmappend=no delete=yes\n<tag-prefix><save-message>=Trash\n<sync-mailbox>:set confirmappend=yes delete=ask-yes\n"

# Save to archive
macro index S ":set confirmappend=no delete=yes\n<tag-prefix><save-message>=Archive\n<sync-mailbox>:set confirmappend=yes delete=ask-yes\n"

